{
  "name": "cwb-calculator",
  "productName": "CWB Fire Value Calculator",
  "version": "0.5.0",
  "description": "Fire Combat Calculator for WDS Civil War Battles",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "CWB Fire Value Calculator",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "uninstallDisplayName": "CWB Fire Value Calculator",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cvasquez23/cwb-calculator.git"
  },
  "author": "Chris Vasquez & Wallace Welder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cvasquez23/cwb-calculator/issues"
  },
  "homepage": "https://github.com/cvasquez23/cwb-calculator#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "electron-builder": "^24.6.4",
    "electron": "26.3.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
